# Environment files with secrets
.env filter=git-crypt diff=git-crypt
.env.* filter=git-crypt diff=git-crypt
*.env filter=git-crypt diff=git-crypt

# Production configuration files
src/main/resources/application-prod.yml filter=git-crypt diff=git-crypt
src/main/resources/application-production.yml filter=git-crypt diff=git-crypt

# Secret keys and certificates
*.pem filter=git-crypt diff=git-crypt
*.key filter=git-crypt diff=git-crypt
**/secrets/** filter=git-crypt diff=git-crypt

# GitHub App private key (if stored as file)
github-private-key.pem filter=git-crypt diff=git-crypt

# Keystore files
*.jks filter=git-crypt diff=git-crypt
*.keystore filter=git-crypt diff=git-crypt